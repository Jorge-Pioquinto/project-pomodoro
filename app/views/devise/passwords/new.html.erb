<br>

<div class="form-container">

  <h2>Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>

  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :email,
    required: true,
    autofocus: true,
    input_html: { autocomplete: "email", class: 'form-control' },
    wrapper: false,
    label_html: { class: 'control-label' } %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary" %>
  </div>

  <% end %>

<br>

  <%= render "devise/shared/links" %>
  
</div>
