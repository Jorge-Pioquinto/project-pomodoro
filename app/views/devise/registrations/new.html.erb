<br>

<div class="form-container">

  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
  
    <%= f.error_notification %>

    <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email", class: 'form-control', placeholder: 'Enter email' }, label_html: { class: 'form-label mt-4' }, label: 'Email address' %>

    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>

    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password", class: 'form-control', placeholder: 'Password' }, label_html: { class: 'form-label mt-4' }, label: 'Password' %>

    <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password", class: 'form-control', placeholder: 'Confirm Password' }, label_html: { class: 'form-label mt-4' }, label: 'Confirm Password' %>

    <%= f.button :submit, "Sign up", class:"btn btn-primary"%>

  <% end %>

  <br>

  <%= render "devise/shared/links" %>

</div>
