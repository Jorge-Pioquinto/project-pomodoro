<div class="d-flex justify-content-between">
  <div>
    <li class="nav-item">
      <%= link_to "Tasks", tasks_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Pomodoros", pomodoros_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Pomodoro Tasks", pomodoro_tasks_path, class: "nav-link" %>
    </li>
  </div>
  <% if user_signed_in? %>
    <div>
      <li class="nav-item">
        <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
      </li>
    </div>
  <% else %>
    <div>
      <li class="nav-item">
        <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
      </li>
    </div>
  <% end %>
